<div class="row container">
  <div class="col s12 m5 l12">
    <div class="card-panel">
      {{#if posts.length}}
      <section>
        <h2>Your Posts</h2>
        {{#each posts as |post|}}
        {{> dashboard-postinfo post}}
        {{/each}}

      </section>
      {{/if}}
      {{!-- new post button --}}
      <a class="waves-effect waves-light btn" type="submit" href="/dashboard/new">New Post</a>
    </div>
  </div>
</div>
<script src="/js/add-post.js"></script>